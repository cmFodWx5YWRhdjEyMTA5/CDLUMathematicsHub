<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/syllabi2year"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recycler_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/finalsch"
            android:clickable="true"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/card_recycler_view1"
            android:focusable="true"
            android:translationZ="5dp"
            android:textColor="@color/white"
            android:text="Download Final Scheme"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/DownloadAll2"
            android:clickable="true"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:layout_below="@id/finalsch"
            android:translationZ="5dp"
            android:textColor="@color/white"
            android:text="Download Complete Syllabus"/>
</RelativeLayout>